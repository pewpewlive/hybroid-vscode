{
  "name": "hybroid",
  "displayName": "Hybroid",
  "description": "Hybroid language support for Visual Studio Code",
  "publisher": "HybroidTeam",
  "repository": {
    "url": "https://github.com/pewpewlive/hybroid-vscode"
  },
  "bugs": {
    "url": "https://github.com/pewpewlive/hybroid-vscode/issues"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "icon": "assets/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "hybroid",
        "aliases": [
          "Hybroid",
          "hybroid"
        ],
        "extensions": [
          ".hyb",
          ".hybroid"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hybroid",
        "scopeName": "scope.hybroid",
        "path": "./syntaxes/hybroid.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "hybroid",
        "path": "./snippets/hybroid.code-snippets"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.1",
    "@vscode/test-electron": "^2.3.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3"
  }
}
